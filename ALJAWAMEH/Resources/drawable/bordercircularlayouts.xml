<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape android:shape="rectangle">
      <gradient android:angle="360"/>
      <solid
          android:color="#add8e6" />
      <corners android:radius="100dp"/>
      <!--<stroke
          android:width="5dp"
          android:color="#ff4949"
          android:dashWidth="3dp"
          android:dashGap="2dp" />-->
    </shape>
  </item>

  <item android:state_enabled="true">
    <layer-list>
      <item android:bottom="0dp" android:right="0dp" >
        <shape android:shape="rectangle">
          <gradient android:angle="270"   />
          <stroke android:width="2dp" android:color="@android:color/transparent" />
          <solid android:color="@android:color/transparent"/>
          <corners android:radius="100dp"/>
          <padding android:left="6dp"  />
        </shape>
      </item>
      <!-- Border -->
      <item android:top="2dp" android:left="-4dp">
        <shape>
          <solid android:color="@android:color/transparent"></solid>
          <corners android:radius="100dp"/>
        </shape>
      </item>
      <!-- Body -->
      <item
            android:left="-4dp"
            android:bottom="2dp"
            android:right="2dp"
            android:top="2dp"
          >
        <shape>
          <solid android:color="#3d8af7"></solid>
          <corners android:radius="100dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

</selector>