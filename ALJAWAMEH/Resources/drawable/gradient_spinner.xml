<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <layer-list>
      <item  >
        <shape android:shape="rectangle">
          <gradient android:angle="270" android:textColor="@android:color/transparent"   />
          <stroke android:width="4dp" android:color="@android:color/transparent" />
          <solid android:color="@android:color/transparent"/>
          <padding android:left="6dp" />
        </shape>
      </item>

      <!-- Border -->
      <!-- Body -->
      <item
      
            android:left="-4dp"
            android:bottom="2dp"
            android:right="2dp"
            android:top="2dp">
        <shape>
          <solid android:color="#ffffff"></solid>
        </shape>
      </item>



      <item >
        <bitmap android:layout_marginRight="20dp" android:layout_marginTop="-10dp" android:gravity="center|right" android:src="@drawable/iconSpinner" />
      </item>
      <item >
        <bitmap android:layout_marginLeft="-10dp" android:layout_marginTop="-10dp" android:gravity="center|left" android:src="@drawable/iconEnterSect" />
      </item>
    </layer-list>
  </item>

</selector>
